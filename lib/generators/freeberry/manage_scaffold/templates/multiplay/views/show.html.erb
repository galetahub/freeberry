<div class="edit-bl">
  <div class="bot-bg">
    <div class="block-title"><%%= @<%= singular_name %>.name %>:</div>
    <div class="edit-cont">
      <table border="0" cellspacing="0" cellpadding="0" class="page-info">
        <tbody>
          <%% @<%= singular_name %>.attributes.each do |attribute, value| %>
            <tr>
              <td><strong><%%= attribute %></strong></td>
              <td><%%= value %></td>
            </tr>  
          <%% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
