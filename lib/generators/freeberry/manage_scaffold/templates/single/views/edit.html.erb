<div class="edit-bl">
  <div class="bot-bg">
    <div class="block-title"><%%= t('manage.edit') %>:</div>
    <%%= form_for [:manage, @<%= singular_name %>], :html=>{:multipart=>true, :id=>'<%= singular_name %>_form'} do |f| -%>
      <%%= render :partial=>"manage/<%= plural_name %>/form", :object=>f %>
      
      <div style="padding: 20px 0px 10px 20px;" class="buts">
        <%%= link_to_function content_tag(:span, t('manage.update')), "$('#<%= singular_name %>_form').submit()", :class=>"gr" %>
        <%%= link_to t('manage.cancel'), manage_<%= plural_name %>_path, :class=>"erase" %>
        <%%= f.submit t('manage.update'), :style=>"display:none;" %>
      </div>
    <%% end %>
  </div>
</div>
